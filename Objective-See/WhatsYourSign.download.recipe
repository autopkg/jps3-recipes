<?xml version="2.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Description</key>
        <string>Downloads the latest version of Objective-Seeâ€™s "What's Your Sign?".</string>
        <key>Identifier</key>
        <string>com.github.jps3.download.WhatsYourSign</string>
        <key>Input</key>
        <dict>
            <key>NAME</key>
            <string>WhatsYourSign</string>
            <key>INSTALLER_APP_NAME</key>
            <string>%NAME%_Installer.app</string>
            <key>DOWNLOAD_PAGE_URL</key>
            <string>https://objective-see.com/products/whatsyoursign.html</string>
        </dict>
        <key>MinimumVersion</key>
        <string>0.4.0</string>
        <key>Process</key>
        <array>
            <dict>
                <key>Processor</key>
                <string>URLTextSearcher</string>
                <key>Arguments</key>
                <dict>
                    <key>url</key>
                    <string>%DOWNLOAD_PAGE_URL%</string>
                    <key>re_pattern</key>
                    <string>"(https://bitbucket.org/objective-see/deploy/downloads/%NAME%.*\.zip)"</string>
                    <!-- So, how can we check digest signatures against what's downloaded "easily" -->
                    <key>result_output_var_name</key>
                    <string>zip_url</string>
                    <key>re_flags</key>
                    <array>
                        <string>IGNORECASE</string>
                    </array>
                </dict>
            </dict>
            <dict>
                <key>Processor</key>
                <string>URLTextSearcher</string>
                <key>Arguments</key>
                <dict>
                    <key>url</key>
                    <string>%DOWNLOAD_PAGE_URL%</string>
                    <key>re_pattern</key>
                    <string>zip's sha-1: +([A-Fa-f0-9]{40})\b</string>
                    <!-- So, how can we check digest signatures against what's downloaded "easily" -->
                    <key>result_output_var_name</key>
                    <string>sha1</string>
                    <key>re_flags</key>
                    <array>
                        <string>IGNORECASE</string>
                    </array>
                </dict>
            </dict>
            <dict>
                <key>Processor</key>
                <string>URLDownloader</string>
                <key>Arguments</key>
                <dict>
                    <key>url</key>
                    <string>%zip_url%</string>
                </dict>
            </dict>
            <dict>
                <key>Processor</key>
                <string>EndOfCheckPhase</string>
            </dict>
            <dict>
                <key>Processor</key>
                <string>Unarchiver</string>
                <key>Arguments</key>
                <dict>
                    <key>purge_destination</key>
                    <true/>
                    <key>destination_path</key>
                    <string>%RECIPE_CACHE_DIR%/%NAME%</string>
                </dict>
            </dict>
            <dict>
                <key>Processor</key>
                <string>CodeSignatureVerifier</string>
                <key>Arguments</key>
                <dict>
                    <key>input_path</key>
                    <string>%RECIPE_CACHE_DIR%/%NAME%/%INSTALLER_APP_NAME%</string>
                    <key>requirement</key>
                    <string>anchor apple generic and identifier "com.objective-see.WhatsYourSign" and (certificate leaf[field.1.2.840.113635.100.6.1.9] /* exists */ or certificate 1[field.1.2.840.113635.100.6.2.6] /* exists */ and certificate leaf[field.1.2.840.113635.100.6.1.13] /* exists */ and certificate leaf[subject.OU] = VBG97UB4TA)</string>
                </dict>
            </dict>
        </array>
    </dict>
</plist>
